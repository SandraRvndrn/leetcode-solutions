#include <iostream>
#include <vector>
#include <string>
#include <algorithm>

using namespace std;

class Solution {
public:
    int minDistance(string word1, string word2) {
        int n = word1.size();
        int m = word2.size();

        vector<vector<int>> dp(n + 1, vector<int>(m + 1, 0));

        // Base cases
        for (int i = 0; i <= n; i++)
            dp[i][0] = i;   // delete all characters

        for (int j = 0; j <= m; j++)
            dp[0][j] = j;   // insert all characters

        // Fill DP table
        for (int i = 1; i <= n; i++) {
            for (int j = 1; j <= m; j++) {
                if (word1[i - 1] == word2[j - 1]) {
                    dp[i][j] = dp[i - 1][j - 1];
                } else {
                    dp[i][j] = 1 + min({
                        dp[i - 1][j],     // delete
                        dp[i][j - 1],     // insert
                        dp[i - 1][j - 1]  // replace
                    });
                }
            }
        }

        return dp[n][m];
    }
};

int main() {
    Solution sol;

    string word1 = "horse";
    string word2 = "ros";

    cout << "Edit Distance: "
         << sol.minDistance(word1, word2)
         << endl;

    return 0;
}
